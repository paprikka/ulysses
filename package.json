{
    "name": "ulysses",
    "version": "0.1.0",
    "private": true,
    "homepage": "https://ulysses.sonnet.io",
    "dependencies": {
        "@testing-library/jest-dom": "^5.7.0",
        "@testing-library/react": "^10.0.4",
        "@testing-library/user-event": "^10.2.0",
        "@types/classnames": "^2.2.9",
        "@types/jest": "24.0.19",
        "@types/node": "12.11.1",
        "@types/react": "16.9.7",
        "@types/react-dom": "16.9.2",
        "classnames": "^2.2.6",
        "http-server": "^0.12.3",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-scripts": "3.4.1",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "serve:prod": "http-server build -p3000",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "test:e2e": "cypress open",
        "test:e2e:chromium": "npx cypress run",
        "test:e2e:firefox": "npx cypress run --browser firefox --headless",
        "pre-commit": "npm run lint && npm t && npm run test:e2e:chromium && npm run test:e2e:firefox",
        "lint": "npx prettier --check src",
        "eject": "react-scripts eject"
    },
    "husky": {
        "hooks": {
            "pre-commit": "CI=true npm run pre-commit"
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.7.0",
        "@testing-library/user-event": "^10.2.0",
        "@types/classnames": "^2.2.9",
        "cypress": "^4.10.0",
        "http-server": "^0.11.1",
        "husky": "^4.2.5"
    }
}
