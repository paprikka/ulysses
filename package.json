{
    "name": "ulysses",
    "version": "0.1.0",
    "private": true,
    "homepage": "https://ulysses.sonnet.io",
    "dependencies": {
        "@testing-library/jest-dom": "^5.7.0",
        "@testing-library/react": "^10.0.4",
        "@testing-library/user-event": "^10.2.0",
        "@types/classnames": "^2.2.9",
        "@types/jest": "24.0.19",
        "@types/node": "12.11.1",
        "@types/react": "16.9.7",
        "@types/react-dom": "16.9.2",
        "@types/uuid": "^8.3.0",
        "classnames": "^2.2.6",
        "firebase-admin": "^9.3.0",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "typescript": "^3.8.3",
        "uuid": "^8.3.1"
    },
    "scripts": {
        "start": "parcel dev src/index.html",
        "serve:dev": "npm run vercel -- dev",
        "serve:prod": "http-server build -p3000",
        "build": "parcel build src/index.html --out-dir build",
        "test": "jest --config=jest.config.js src",
        "test:e2e": "cypress open",
        "test:e2e:chromium": "npx cypress run",
        "test:e2e:firefox": "npx cypress run --browser firefox --headless",
        "pre-commit": "npm run lint && npm t && npm run test:e2e:chromium && npm run test:e2e:firefox",
        "lint": "prettier --check src",
        "vercel": "vercel"
    },
    "husky": {
        "hooks": {
            "pre-commit": "CI=true npm run pre-commit"
        }
    },
    "eslintConfig": {
        "extends": "prettier"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.7.0",
        "@testing-library/user-event": "^10.2.0",
        "@types/classnames": "^2.2.9",
        "@types/express": "^4.17.8",
        "cypress": "^4.10.0",
        "eslint-config-prettier": "^6.15.0",
        "http-server": "^0.12.3",
        "husky": "^4.2.5",
        "jest": "^26.6.3",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.1.2",
        "ts-jest": "^26.4.3",
        "vercel": "^20.1.2"
    }
}
